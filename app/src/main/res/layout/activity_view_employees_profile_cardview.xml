<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/logo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/viewProfile_emp"
                            android:layout_width="164dp"
                            android:layout_height="164dp"
                            android:paddingBottom="10dp"
                            android:src="@drawable/ic_image_placeholder"
                            app:civ_border_color="@color/kapwatek"
                            app:civ_border_width="1dp" />
                        <TextView
                            android:id="@+id/name_emp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/email_emp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:paddingTop="5dp"
                            android:text="sample@gmail.com"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="normal" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/background" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:paddingBottom="20dp">

                        <!--                        <TextView-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:drawableStart="@drawable/account"-->
                        <!--                            android:fontFamily="@font/montserrat"-->
                        <!--                            android:paddingTop="10dp"-->
                        <!--                            android:text="  Full Name"-->
                        <!--                            android:textColor="@color/black"-->
                        <!--                            android:textSize="15dp" />-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="30dp">


                            <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:paddingTop="15dp"
                            android:text="City"
                            android:textColor="@color/kapwatek"
                            android:textSize="18dp" />


                        <TextView
                            android:id="@+id/address_emp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:paddingTop="5dp"
                            android:text="address"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:paddingTop="15dp"
                            android:text="Contact Person"
                            android:textColor="@color/kapwatek"
                            android:textSize="18dp" />


                        <TextView
                            android:id="@+id/contactPerson_emp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:paddingTop="5dp"
                            android:text="Contact Person"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:paddingTop="15dp"
                            android:text=" Contact Person Number"
                            android:textColor="@color/kapwatek"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/contactPersonNo_emp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:paddingTop="5dp"
                            android:text="+639222 222 2222"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="normal" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:paddingTop="20dp"
                            android:text=" Employee's Valid ID"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/viewValid1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="validone"
                            android:textAlignment="center"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/empValidID"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:src="@drawable/ic_image_placeholder" />

                        <TextView
                            android:id="@+id/viewValid2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="validtwo"
                            android:textAlignment="center"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/empValidID2"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:src="@drawable/ic_image_placeholder" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="10dp">

                            <LinearLayout
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat"
                                    android:paddingTop="15dp"
                                    android:text="Status: "
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/status_emp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="30dp"
                                    android:text="status"
                                    android:textColor="@color/black"
                                    android:textSize="16dp" />

                            </LinearLayout>

                            <Spinner
                                android:id="@+id/spinnerChangeStatus"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:layout_marginBottom="16dp"
                                android:background="@android:drawable/btn_dropdown"
                                android:paddingBottom="20dp"
                                android:spinnerMode="dropdown"
                                android:textColor="@color/black"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Button
                            android:id="@+id/btnApprove"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:background="@drawable/btn_login_effect"
                            android:fontFamily="@font/montserrat"
                            android:text="Update"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>


</androidx.cardview.widget.CardView>